{
  "name": "auth0-mcp",
  "version": "1.0.0",
  "description": "Auth0 Model Context Protocol (MCP) Server - A robust integration between Auth0 and MCP for user management",
  "main": "dist/modelcontextprotocol/index.js",
  "types": "dist/modelcontextprotocol/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "start": "node dist/example.js",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "test": "jest",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "auth0",
    "mcp",
    "model-context-protocol",
    "user-management",
    "authentication",
    "authorization",
    "ai",
    "agents",
    "oauth"
  ],
  "author": {
    "name": "Auth0 MCP Contributors",
    "url": "https://github.com/yourusername/auth0-mcp/graphs/contributors"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.5.0",
    "auth0": "^4.2.0",
    "dotenv": "^16.4.0",
    "express": "^4.18.3",
    "cors": "^2.8.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/auth0-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/auth0-mcp/issues"
  },
  "homepage": "https://github.com/yourusername/auth0-mcp#readme",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
